{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "include": [
    "index.js",
    "App.js",
    "app",
    "test",
    "detox/*",
    "babel.config.js",
    "jest.config.js",
    "metro.config.js",
    "react-native.config.js",
    "webpack.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
